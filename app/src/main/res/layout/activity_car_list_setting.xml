<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarsListSettingActivity"
    android:background="@drawable/background"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="8dp"
            android:textSize="14dp"
            android:text="Фильтрация"
            android:textColor="@color/colorAccent"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:text="Фильтровать\nпо брэнду"/>
            <Spinner
                android:id="@+id/brands_filter_spinner"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:text="Фильтровать\nпо модели"/>
            <Spinner
                android:id="@+id/models_filter_spinner"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="14dp"
            android:text="Сортировка"
            android:textColor="@color/colorAccent"
            />
        <!--android:layout_marginBottom="8dp"-->
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            >
            <RadioButton
                android:id="@+id/radio_without_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Без сортировки"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                />
            <RadioButton
                android:id="@+id/radio_price_asc_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сортировать по цене\n(сначало дешевые)"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                />
            <RadioButton
                android:id="@+id/radio_price_desc_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сортировать по цене\n(сначало дорогие)"
                android:clickable="true"
                />
        </RadioGroup>
    </LinearLayout>
    <Button
        android:id="@+id/car_list_settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:text="Применить"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColor="@android:color/black"
        android:layout_gravity="bottom|center"
        />
</FrameLayout>